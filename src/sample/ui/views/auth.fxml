<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="sample.presenter.AuthController">
    <columnConstraints>
        <ColumnConstraints/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints/>
    </rowConstraints>
    <children>
        <AnchorPane prefHeight="300.0" prefWidth="500.0" style="-fx-background-color: #4a6a9e;">
            <children>
                <AnchorPane layoutY="76.0" prefHeight="224.0" prefWidth="500.0" style="-fx-background-color: #dae3f0;">
                    <children>
                        <Button fx:id="authUserButton" layoutX="174.0" layoutY="105.0" mnemonicParsing="false"
                                prefHeight="45.0" prefWidth="153.0" text="%login_button"/>
                        <Button fx:id="authGuestButton" layoutX="174.0" layoutY="162.0" mnemonicParsing="false"
                                prefHeight="25.0" prefWidth="153.0" text="%guest_button"/>
                        <TextField fx:id="loginField" layoutX="127.0" layoutY="27.0" prefHeight="25.0" prefWidth="246.0"
                                   promptText="%login_text" style="-fx-border-radius: 5;"/>
                        <PasswordField fx:id="passwordField" layoutX="127.0" layoutY="73.0" prefHeight="25.0"
                                       prefWidth="246.0" promptText="%password_text"/>
                        <Label fx:id="messageTextField" alignment="CENTER" layoutY="202.0" prefHeight="25.0"
                               prefWidth="500.0" style="-fx-background-color: #4a6a9e;" textFill="WHITE"/>
                    </children>
                </AnchorPane>
                <Label fx:id="authLabel" alignment="CENTER" layoutX="124.0" layoutY="14.0" prefHeight="45.0"
                       prefWidth="253.0" text="%auth_label" textAlignment="CENTER" textFill="WHITE">
                    <font>
                        <Font name="Arial Bold Italic" size="24.0"/>
                    </font>
                </Label>
            </children>
        </AnchorPane>
    </children>
</GridPane>
